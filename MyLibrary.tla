----------------------------- MODULE MyLibrary -----------------------------

EXTENDS Integer

(***************************************************************************)
(* Simple math                                                             *)
(***************************************************************************)
Sum(a, b) == a + b
Sub(a, b) == a - b
Mult(a, b) == a * b
Div(a, b) == a / b

(***************************************************************************)
(* Set related                                                             *)
(***************************************************************************)

Pick(S) == CHOOSE s \in S : TRUE
RECURSIVE SetReduce(_, _, _)
SetReduce(Op(_, _), S, value) == IF S = {} THEN value
                              ELSE LET s == Pick(S)
                              IN SetReduce(Op, S \ {s}, Op(s, value))

Sum(S) == LET _op(a, b) == a + b
          IN SetReduce(_op, S, 0)

(***************************************************************************)
(* Useful Ranges                                                           *)
(***************************************************************************)

Range10 == n \in 0..9

